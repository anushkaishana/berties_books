        <h1>Welcome to <%= shopName %></h1>
    </header>
    <main>
        <h2>Bargain Books</h2>
        <ul>
            <% if (bargainBooks && bargainBooks.length > 0) { %>
                <% bargainBooks.forEach(book => { %>
                    <li><%= book.name %> - Â£<%= book.price.toFixed(2) %></li>
                <% }); %>
            <% } else { %>
                <p>No bargain books available at the moment.</p>
            <% } %>
        </ul>
    </main>
</body>
</html>
